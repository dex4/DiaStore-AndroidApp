<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialButtonStyle">@style/DiaStoreButton</item>
        <item name="textInputStyle">@style/StyledTilEditTextTheme</item>
        <item name="radioButtonStyle">@style/FilledRadioButton</item>
        <item name="bottomSheetDialogTheme">@style/RoundedBottomSheetDialogTheme</item>
    </style>

    <style name="SplashScreenTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.ActionBar" parent="AppTheme">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <!--region Headlines-->
    <style name="Headline1" parent="TextAppearance.MaterialComponents.Headline1" />

    <style name="Headline1.Bold" parent="Headline1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Headline2" parent="TextAppearance.MaterialComponents.Headline2" />

    <style name="Headline2.Bold" parent="Headline2">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Headline3" parent="TextAppearance.MaterialComponents.Headline3" />

    <style name="Headline3.Bold" parent="Headline3">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Headline4" parent="TextAppearance.MaterialComponents.Headline4" />

    <style name="Headline4.Bold" parent="Headline4">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Headline5" parent="TextAppearance.MaterialComponents.Headline5" />

    <style name="Headline5.Bold" parent="Headline5">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Headline6" parent="TextAppearance.MaterialComponents.Headline6" />

    <style name="Headline6.Bold" parent="Headline6">
        <item name="android:textStyle">bold</item>
    </style>
    <!--endregion-->

    <!--region Subtitle-->
    <style name="Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1" />

    <style name="Subtitle1.Bold" parent="Subtitle1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2" />

    <style name="Subtitle2.Bold" parent="Subtitle2">
        <item name="android:textStyle">bold</item>
    </style>
    <!--endregion-->

    <!--region Caption-->
    <style name="Caption" parent="TextAppearance.MaterialComponents.Caption" />

    <style name="Caption.Bold" parent="Caption">
        <item name="android:textStyle">bold</item>
    </style>
    <!--endregion-->

    <!--region Body-->
    <style name="Body1" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="Body1.Bold" parent="Body1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body2" parent="TextAppearance.MaterialComponents.Body2" />

    <style name="Body2.Bold" parent="Body2">
        <item name="android:textStyle">bold</item>
    </style>
    <!--endregion-->

    <!--region Widgets-->
    <style name="DiaStoreButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">240dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">56dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="StyledTilEditTextTheme">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="FilledRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/bg_entry_radio_button</item>
        <item name="android:textColor">@drawable/bg_radio_button_text_color</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:foreground">@drawable/bg_radio_button_ripple</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:button">@color/transparent_white</item>
        <item name="android:textAppearance">@style/Subtitle2</item>
    </style>

    <style name="RoundedBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_rounded_corners</item>
    </style>

    <style name="RoundedBottomSheetDialog" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheet</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/TextButton</item>
    </style>

    <style name="RoundedBottomSheetDialogTheme" parent="RoundedBottomSheetDialog" />
    <!--endregion-->
</resources>
